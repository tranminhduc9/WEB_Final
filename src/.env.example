# ==============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file with real credentials!

# Environment
ENVIRONMENT=development
DEBUG=true

# ==============================================
# DATABASE - PostgreSQL
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/travel_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==============================================
# FILE UPLOAD
# ==============================================
MAX_FILE_SIZE=5242880
# AWS S3 Configuration (set USE_S3=true for production)
USE_S3=false
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=ap-southeast-1
UPLOADS_BASE_URL=http://127.0.0.1:8080/static/uploads

# ==============================================
# MONGODB
# ==============================================
MONGO_URI=mongodb://localhost:27017/hanoi_travel
MONGO_DB_NAME=hanoi_travel_mongo
MONGO_TIMEOUT=5000

# ==============================================
# REDIS (optional)
# ==============================================
REDIS_URL=redis://localhost:6379/0

# ==============================================
# JWT & SECURITY
# ==============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800

# ==============================================
# CORS & FRONTEND
# ==============================================
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:5173,http://127.0.0.1,http://127.0.0.1:80,http://127.0.0.1:5173
FRONTEND_URL=http://localhost:5173

# Build-time variable for frontend
VITE_API_URL=/api/v1

# ==============================================
# EMAIL (SendGrid)
# ==============================================
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@example.com
FROM_NAME=Hanoi Travel

# ==============================================
# AI CHATBOT (Google Gemini)
# ==============================================
CHATBOT_API_KEY=your-google-gemini-api-key
CHATBOT_MODEL=gemini-2.5-flash
CHATBOT_TEMPERATURE=0.7
CHATBOT_MAX_TOKENS=2048
CHATBOT_TIMEOUT=30.0
CHATBOT_ENABLED=true

# ==============================================
# HUNTER.IO - Email Validation (optional)
# ==============================================
HUNTER_IO_API_KEY=your-hunter-io-api-key

# ==============================================
# RATE LIMITING & THROTTLE
# ==============================================
RATE_LIMIT_ENABLED=true
THROTTLE_ENABLED=true
THROTTLE_MAX_ATTEMPTS=5
THROTTLE_LOCKOUT_DURATION=900
THROTTLE_BASE_DELAY=1.0
THROTTLE_MAX_DELAY=30.0
THROTTLE_DELAY_MULTIPLIER=2.0
THROTTLE_RESET_TIMEOUT=1800

# ==============================================
# SECURE COOKIES
# ==============================================
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_ACCESS_MAX_AGE=3600
COOKIE_REFRESH_MAX_AGE=604800
COOKIE_SESSION_MAX_AGE=86400

# ==============================================
# SECURITY
# ==============================================
HSTS_MAX_AGE=31536000
REQUEST_SIZE_LIMIT_ENABLED=true
MAX_JSON_BODY_SIZE=1048576
MAX_FORM_DATA_SIZE=2097152

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOG=true
ENABLE_SEARCH_LOGGING=true

# ==============================================
# BACKEND SERVER
# ==============================================
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8080
